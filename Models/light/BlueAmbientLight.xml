<PropertyList>
  
  <path>BlueAmbientLight.ac</path>  
  
  <!-- No preview for fgrun-->
  <animation>
    <object-name>Volume</object-name> 
    <object-name>LightGlow</object-name>
    <object-name>Lamp</object-name>
    <nopreview/>
    </animation>
    
    <!-- Special Shaders -->
    
    <animation>
      <type>noshadow</type>      
      <object-name>Volume</object-name> 
      <object-name>LightGlow</object-name>
      <object-name>Lamp</object-name>
    </animation>
    
    <animation>
      <type>material</type>
      <object-name>Lamp</object-name>
      <emission>
	<red>0.60</red>
	<green>0.60</green>
	<blue>1.0</blue>
	<factor-prop>sim/multiplay/generic/int[17]</factor-prop>
      </emission>
    </animation>
    
    <animation>
      <type>select</type>
      <object-name>LightGlow</object-name>
      <condition>
	<and>
	  <not><property>/sim/rendering/rembrandt/enabled</property></not>
	  <property>sim/multiplay/generic/int[17]</property>
	</and>
      </condition>
    </animation>
    
    <animation>
      <type>select</type>
      <object-name>Volume</object-name> 
      <condition>
	<and>
	  <property>/sim/rendering/rembrandt/enabled</property>
	  <property>sim/multiplay/generic/int[17]</property>
	</and>
      </condition>
    </animation>
    
    <!-- beacon red top -->
    <animation>
      <type>light</type>
      <light-type>point</light-type>
      <name>AmbientBlue</name>
      <object-name>Volume</object-name>
      <position>
	<x> 0.0</x>
	<y> 0.0</y>
	<z>-0.05</z>
      </position>
      <ambient>
	<r>0.6</r>
	<g>0.6</g>
	<b>1.0</b>
	<a>1.0</a>
      </ambient>
      <diffuse>
	<r>0.6</r>
	<g>0.6</g>
	<b>1.0</b>
	<a>1.0</a>
      </diffuse>
      <specular>
	<r>1.0</r>
	<g>1.0</g>
	<b>1.0</b>
	<a>1.0</a>
      </specular>
      <attenuation>
	<c>1.0</c>
	<l>0.7</l>
	<q>2</q>
      </attenuation>
      <near-m>0.01</near-m>
      <far-m>20</far-m>
    </animation>
    
    </PropertyList>