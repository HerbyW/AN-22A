<PropertyList>

  
  <path>frontpanel02.ac</path>

   <!-- Navigator Panel -->
  <!-- PNP, HSI Horizontal Situation Indicator from TU154b-->
  <model>
    <path>Aircraft/AN-22A/Models/Interior/Panel/Instruments/pnp/pnp.xml</path>
    <offsets>
      <x-m>  -1.472 </x-m>
      <y-m>   0.0575 </y-m>
      <z-m>  -1.573 </z-m>
    </offsets>
  </model>
  
  <!-- ASI, Indicated Airspeed Indicator, for use with the Autothrottle in kt-->
  
  <model>
    <path>Aircraft/AN-22A/Models/Interior/Panel/Instruments/asi/asi.xml</path>
    <offsets>
      <x-m>  -1.472 </x-m>
      <y-m>  -0.075 </y-m>
      <z-m>  -1.573 </z-m>
    </offsets>
  </model>
  
  
  
