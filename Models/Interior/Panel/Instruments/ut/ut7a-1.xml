<!-- Exhaust gas temperature indicator UT-7A-710 3D instrument for Tu-134 -->
<PropertyList>

  <path>ut7a.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle_1</object-name>
    <object-name>needle_2</object-name>
    <object-name>cache</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle_1</object-name>
    <object-name>needle_2</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <!--Needles-->
  <animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>/engines/engine[0]/egt-degf</property>
    <!-- Temperature degc -->
    <factor> -17.22 </factor>
    <interpolation>
      <entry><ind> 300 </ind><dep> -130 </dep></entry>
      <entry><ind> 600 </ind><dep>    0 </dep></entry>
      <entry><ind> 900 </ind><dep>  130 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle_2</object-name>
    <property>engines/engine[0]/epr</property>
    <factor> 3.6 </factor>
    <offset-deg> 180 </offset-deg>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m>  0.00022 </y-m>
      <z-m> -0.01067 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
